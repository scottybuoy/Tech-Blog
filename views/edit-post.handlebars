<form id="edit-post-form" data-id="{{post.id}}">
  <div class="form-group">
    <label for="">Title</label>
    <input class="form-control" id="edit-post-title" value="{{post.title}}">
  </div>
  <div class="form-group">
    <label for="">Content</label>
    <textarea class="form-control" id="edit-post-content" rows="3">{{post.content}}</textarea>
  </div>
    <button type="submit" >Update</button>
    <button type="button" id="post-delete-button">Delete</button>
</form>

<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>